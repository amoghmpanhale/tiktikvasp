<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Video Player -->
    <androidx.media3.ui.PlayerView
        android:id="@+id/video_player"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:use_controller="false"
        app:surface_type="texture_view" />

    <!-- Overlay for UI elements -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <!-- Bottom section with video info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="80dp"
            android:layout_marginBottom="64dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/video_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="@username" />

            <TextView
                android:id="@+id/video_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                tools:text="Video description with #hashtags" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/music_icon"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:src="@android:drawable/ic_lock_silent_mode_off"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/music_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="4dp"
                    android:ellipsize="marquee"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    tools:text="Original sound - username" />
            </LinearLayout>
        </LinearLayout>

        <!-- Right side actions -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="64dp"
            android:orientation="vertical">

            <!-- Profile avatar -->
            <FrameLayout
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@android:drawable/ic_menu_camera"
                    app:civ_border_color="@android:color/white"
                    app:civ_border_width="1dp" />

                <ImageView
                    android:id="@+id/follow_button"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="-8dp"
                    android:background="@android:color/holo_red_light"
                    android:padding="4dp"
                    android:src="@android:drawable/ic_input_add"
                    app:tint="@android:color/white" />
            </FrameLayout>

            <!-- Like button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/like_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@android:drawable/star_big_off"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/like_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    tools:text="12.5K" />
            </LinearLayout>

            <!-- Comment button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/comment_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@android:drawable/sym_action_chat"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/comment_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    tools:text="1.2K" />
            </LinearLayout>

            <!-- Share button -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/share_icon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@android:drawable/ic_menu_share"
                    app:tint="@android:color/white" />

                <TextView
                    android:id="@+id/share_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:text="Share" />
            </LinearLayout>
        </LinearLayout>

        <!-- Playing/Paused indicator in center -->
        <ImageView
            android:id="@+id/play_indicator"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:alpha="0"
            android:src="@android:drawable/ic_media_play"
            app:tint="@android:color/white" />

        <!-- Loading progress -->
        <ProgressBar
            android:id="@+id/loading_progress"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:visibility="gone" />

        <!-- Double-tap like animation -->
        <ImageView
            android:id="@+id/heart_animation"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:alpha="0"
            android:src="@android:drawable/btn_star_big_on"
            app:tint="@android:color/holo_red_light" />
    </RelativeLayout>
</FrameLayout>